    "pure-uuid": "^1.6.2",
    "sitka": "^1.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/chai": "4.2.15",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.25",
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "eslint": "7.19.0",
    "husky": "5.0.9",
    "lint-staged": "10.5.4",
    "nyc": "15.1.0",
    "prettier": "2.2.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write src",
      "prettier --write test",
